<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>Coffee Shop</title>
  <style>
    body { font-family: sans-serif; background-color: #fdf6e3; padding: 30px; }
    table { width: 100%; border-collapse: collapse; background-color: #fff; }
    th, td { border: 1px solid #ccc; padding: 10px; text-align: left; }
    th { background-color: #eee; }
    h1 { text-align: center; }
  </style>
</head>
<body>
  <h1>Coffee Menu</h1>
  <table>
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Size</th>
        <th>Price (THB)</th>
      </tr>
    </thead>
    <tbody>
      <% coffees.forEach((coffee, index) => { %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= coffee.name %></td>
          <td><%= coffee.size %></td>
          <td><%= coffee.price %></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
